{
  "name": "clean-node-api",
  "version": "1.3.0",
  "description": "NodeJs Rest API using TDD, Clean Architecture and Typescript",
  "scripts": {
    "start": "node dist/main/server.js",
    "build": "rimraf dist && tsc",
    "watch-ts": "tsc -w",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "up": "npm run build && docker-compose up -d",
    "down": "docker-compose down",
    "test": "npx jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "npx jest --passWithNoTests --runInBand",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage"
  },
  "author": "Sostenes Apollo",
  "license": "ISC",
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.3.4",
    "@types/bcrypt": "^3.0.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^24.9.1",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/mongodb": "^3.6.20",
    "@types/node": "^13.13.52",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^12.0.1",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "eslint": "^6.8.0",
    "eslint-config-standard-with-typescript": "^11.0.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^4.1.0",
    "git-commit-msg-linter": "^2.7.0",
    "husky": "^4.3.8",
    "jest": "^27.2.4",
    "lint-staged": "^10.0.0",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^27.0.5",
    "typescript": "^3.9.10"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.7.1",
    "nodemon": "^2.0.13",
    "validator": "^12.2.0"
  },
  "engines": {
    "node": "12.x"
  }
}
